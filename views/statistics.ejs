</div>

<script>
    let chart = null;

    // ë‚ ì§œ ë²”ìœ„ ì„¤ì •
    function setDateRange(days, targetElement) {
        const end = new Date();
        const start = new Date();
        start.setDate(start.getDate() - days);

        document.getElementById('startDate').value = formatDate(start);
        document.getElementById('endDate').value = formatDate(end);

        // í™œì„± ë²„íŠ¼ í‘œì‹œ
        document.querySelectorAll('.quick-btn').forEach(btn => btn.classList.remove('active'));

        // í´ë¦­ëœ ë²„íŠ¼ ë˜ëŠ” ê¸°ë³¸ ë²„íŠ¼ í™œì„±í™”
        if (targetElement) {
            targetElement.classList.add('active');
        } else {
            // í˜ì´ì§€ ë¡œë“œ ì‹œ ê¸°ë³¸ìœ¼ë¡œ 30ì¼ ë²„íŠ¼ í™œì„±í™”
            const defaultBtn = document.querySelector('.quick-btn');
            if (defaultBtn && days === 30) {
                defaultBtn.classList.add('active');
            }
        }

        loadStatistics();
    }

    function formatDate(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    // í†µê³„ ë°ì´í„° ë¡œë“œ
    async function loadStatistics() {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;

        if (!startDate || !endDate) {
            Swal.fire('ì˜¤ë¥˜', 'ì‹œì‘ì¼ê³¼ ì¢…ë£Œì¼ì„ ì„ íƒí•´ì£¼ì„¸ìš”', 'error');
            return;
        }

        try {
            const response = await fetch(`/api/statistics?startDate=${startDate}&endDate=${endDate}`);
            const data = await response.json();

            if (data.error) {
                Swal.fire('ì˜¤ë¥˜', data.error, 'error');
                return;
            }

            displayStatistics(data);
        } catch (error) {
            console.error('í†µê³„ ë¡œë“œ ì‹¤íŒ¨:', error);
            Swal.fire('ì˜¤ë¥˜', 'í†µê³„ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ”ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤', 'error');
        }
    }

    // í†µê³„ ë°ì´í„° í‘œì‹œ
    function displayStatistics(data) {
        if (data.length === 0) {
            document.querySelector('.chart-container').innerHTML = '<div class="no-data">ì„ íƒí•œ ê¸°ê°„ì— ì‚°ì±… ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤</div>';
            document.getElementById('tableBody').innerHTML = '';
            return;
        }

        // ì°¨íŠ¸ ê·¸ë¦¬ê¸°
        drawChart(data);

        // í…Œì´ë¸” ì—…ë°ì´íŠ¸
        updateTable(data);
    }

    // ì°¨íŠ¸ ê·¸ë¦¬ê¸°
    function drawChart(data) {
        const ctx = document.getElementById('walkChart');
        const container = document.querySelector('.chart-container');
        container.innerHTML = '<canvas id="walkChart"></canvas>';

        const labels = data.map(item => {
            return `${item.dogName} (${item.cageName})`;
        });
        const values = data.map(item => item.walkCount);

        // ê·¸ë¼ë°ì´ì…˜ ìƒ‰ìƒ ìƒì„±
        const colors = data.map((_, index) => {
            const hue = (index * 360 / data.length) % 360;
            return `hsla(${hue}, 70%, 60%, 0.8)`;
        });

        if (chart) {
            chart.destroy();
        }

        chart = new Chart(document.getElementById('walkChart'), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'ì‚°ì±… íšŸìˆ˜',
                    data: values,
                    backgroundColor: colors,
                    borderColor: colors.map(c => c.replace('0.8', '1')),
                    borderWidth: 2,
                    borderRadius: 8,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'ê°•ì•„ì§€ë³„ ì‚°ì±… íšŸìˆ˜',
                        font: {
                            size: 18,
                            weight: 'bold'
                        },
                        padding: 20
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `ì‚°ì±… íšŸìˆ˜: ${context.parsed.y}íšŒ`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        },
                        title: {
                            display: true,
                            text: 'íšŸìˆ˜',
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    },
                    x: {
                        ticks: {
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                }
            }
        });
    }

    // í…Œì´ë¸” ì—…ë°ì´íŠ¸
    function updateTable(data) {
        const tbody = document.getElementById('tableBody');
        tbody.innerHTML = '';

        data.forEach((item, index) => {
            const row = document.createElement('tr');
            const thumbUrl = `https://jikddaz.s3.ap-northeast-2.amazonaws.com/cage_${item.cageId}_dog_${item.dogId}_thumb.jpeg`;

            row.innerHTML = `
                <td class="rank">${index + 1}</td>
                <td><img src="${thumbUrl}" alt="${item.dogName}" class="dog-thumb clickable-img" data-cage-id="${item.cageId}" data-dog-id="${item.dogId}" onerror="this.onerror=null; this.src='/img/no-image.svg'"></td>
                <td>${item.dogName}</td>
                <td>${item.cageId}ë²ˆ</td>
                <td class="walk-count"><strong>${item.walkCount}íšŒ</strong></td>
            `;
            tbody.appendChild(row);
        });

        // ì´ë¯¸ì§€ í´ë¦­ ì´ë²¤íŠ¸ ì¶”ê°€
        document.querySelectorAll('.clickable-img').forEach(img => {
            img.addEventListener('click', function() {
                const cageId = this.getAttribute('data-cage-id');
                const dogId = this.getAttribute('data-dog-id');
                const originalSrc = `https://jikddaz.s3.ap-northeast-2.amazonaws.com/cage_${cageId}_dog_${dogId}.jpeg`;

                const modal = document.getElementById('photo-modal');
                const modalImg = document.getElementById('modal-img');

                modalImg.src = originalSrc;
                modal.style.display = 'flex';
            });
        });
    }

    // ëª¨ë‹¬ ë‹«ê¸°
    document.addEventListener('DOMContentLoaded', () => {
        const modal = document.getElementById('photo-modal');
        modal.addEventListener('click', () => {
            modal.style.display = 'none';
        });
    });

    // í˜ì´ì§€ ë¡œë“œ ì‹œ ê¸°ë³¸ í†µê³„ í‘œì‹œ (ìµœê·¼ 30ì¼)
    window.addEventListener('DOMContentLoaded', () => {
