    </div>

    <script>
        const S3_BASE_URL = 'https://jikddaz.s3.ap-northeast-2.amazonaws.com';
        const MAX_CAGES = 60;

        function getTodayString() {
            const now = new Date();
            return `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}-${String(now.getDate()).padStart(2, '0')}`;
        }

        function escapeHtml(str) {
            const div = document.createElement('div');
            div.textContent = str;
            return div.innerHTML;
        }

        async function loadStatistics() {
            const allDogs = [];
            const today = getTodayString();

            // Î™®Îì† Í≤¨ÏÇ¨Ïùò Í∞ïÏïÑÏßÄ Îç∞Ïù¥ÌÑ∞ Î°úÎìú
            for (let cageId = 1; cageId <= MAX_CAGES; cageId++) {
                try {
                    const res = await fetch(`/cage/${cageId}/dogs`);
                    const dogs = await res.json();

                    for (const dog of dogs) {
                        try {
                            const walksRes = await fetch(`/cage/${cageId}/dogs/${dog.id}/walks`);
                            const walks = await walksRes.json();
                            const todayWalk = walks.find(w => w.time.startsWith(today));

                            allDogs.push({
                                ...dog,
                                cageId,
                                walked: !!todayWalk,
                                walkTime: todayWalk ? todayWalk.time.split(' ')[1] : null
                            });
                        } catch (e) {
                            allDogs.push({ ...dog, cageId, walked: false, walkTime: null });
                        }
                    }
                } catch (e) {
                    // ÏóêÎü¨ Î¨¥Ïãú
                }
            }

            // ÌÜµÍ≥Ñ Í≥ÑÏÇ∞
            const total = allDogs.length;
            const walked = allDogs.filter(d => d.walked).length;
            const percent = total > 0 ? Math.round((walked / total) * 100) : 0;
            const remaining = total - walked;

            // UI ÏóÖÎç∞Ïù¥Ìä∏
            document.getElementById('circularProgress').style.setProperty('--percent', `${percent}%`);
            document.getElementById('percentText').innerHTML = `${percent}<span class="text-xl">%</span>`;
            document.getElementById('statsText').textContent = `${walked}/${total} ÎßàÎ¶¨ ÏÇ∞Ï±Ö ÏôÑÎ£å`;

            if (percent === 100) {
                document.getElementById('messageText').textContent = 'Ïò§Îäò ÏÇ∞Ï±Ö ÏôÑÎ£å! ÏàòÍ≥†ÌïòÏÖ®ÏäµÎãàÎã§ üéâ';
            } else if (percent >= 80) {
                document.getElementById('messageText').textContent = `Í±∞Ïùò Îã§ ÎêêÏñ¥Ïöî! ${remaining}ÎßàÎ¶¨ ÎÇ®ÏïòÏäµÎãàÎã§ üí™`;
            } else if (percent >= 50) {
                document.getElementById('messageText').textContent = `Ï†àÎ∞ò ÎÑòÏóàÏñ¥Ïöî! ${remaining}ÎßàÎ¶¨ ÎÇ®ÏïòÏäµÎãàÎã§ üêæ`;
            } else if (percent > 0) {
                document.getElementById('messageText').textContent = `Î™©ÌëúÍπåÏßÄ ${remaining}ÎßàÎ¶¨ ÎÇ®ÏïòÏñ¥Ïöî! ÌûòÎÇ¥ÏÑ∏Ïöî üêï`;
            } else {
                document.getElementById('messageText').textContent = 'Ïò§ÎäòÏùò ÏÇ∞Ï±ÖÏùÑ ÏãúÏûëÌï¥Î≥¥ÏÑ∏Ïöî!';
            }

            // Í∞ïÏïÑÏßÄ Î™©Î°ù Î†åÎçîÎßÅ (cageId ÏàúÏúºÎ°ú Ï†ïÎ†¨)
            allDogs.sort((a, b) => a.cageId - b.cageId);

            const dogListHtml = allDogs.map(dog => {
                const imgUrl = `${S3_BASE_URL}/cage_${dog.cageId}_dog_${dog.id}_thumb.jpeg`;
                const nameEscaped = escapeHtml(dog.name);

                return `
                    <div class="flex items-center justify-between p-3 bg-white rounded-xl border border-slate-100">
                        <div class="flex items-center gap-3">
                            <img src="${imgUrl}"
                                 onerror="this.onerror=null; this.src='${S3_BASE_URL}/0_thumb.jpeg'"
                                 class="w-10 h-10 rounded-lg object-cover bg-slate-200">
                            <div>
                                <p class="font-bold text-slate-900 text-sm">${nameEscaped}</p>
                                <p class="text-xs text-slate-400">${dog.cageId}Î≤à Í≤¨ÏÇ¨</p>
                            </div>
                        </div>
                        ${dog.walked ? `
                            <div class="flex items-center gap-2">
                                <span class="text-xs text-green-600 font-medium">${dog.walkTime}</span>
                                <span class="material-symbols-outlined text-green-500 text-[20px]">check_circle</span>
                            </div>
                        ` : `
                            <span class="text-xs text-slate-400 font-medium">ÎØ∏ÏÇ∞Ï±Ö</span>
                        `}
                    </div>
                `;
            }).join('');

            document.getElementById('dogList').innerHTML = dogListHtml || '<p class="text-center text-slate-400 py-4">Îì±Î°ùÎêú Í∞ïÏïÑÏßÄÍ∞Ä ÏóÜÏäµÎãàÎã§</p>';
        }

        loadStatistics();
    </script>
